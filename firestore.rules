rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isParent() {
      return request.auth != null && request.auth.token.role == 'PARENT';
    }
    function isStudent() {
      return request.auth != null && request.auth.token.role == 'STUDENT';
    }
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'ADMIN';
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /children/{childId} {
      allow read: if isParent() && request.auth.uid == resource.data.parentId;
      allow write: if isParent() && request.resource.data.parentId == request.auth.uid || isAdmin();
    }

    match /subscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if isAdmin();
    }

    match /skills/{docId} {
      allow read: if isAdmin() || (isParent() && resource.data.parentId == request.auth.uid) || (isStudent() && resource.data.childId == request.auth.uid);
      allow write: if isAdmin() || (isParent() && request.resource.data.parentId == request.auth.uid) || (isStudent() && request.resource.data.childId == request.auth.uid);
    }

    match /attempts/{attemptId} {
      allow create: if isAdmin() || (isParent() && request.resource.data.parentId == request.auth.uid) || (isStudent() && request.resource.data.childId == request.auth.uid);
      allow read: if isAdmin() || (isParent() && resource.data.parentId == request.auth.uid) || (isStudent() && resource.data.childId == request.auth.uid);
    }

    match /srsCards/{cardId} {
      allow read, write: if isAdmin() || (isParent() && resource.data.parentId == request.auth.uid) || (isStudent() && resource.data.childId == request.auth.uid);
    }

    match /weeklySummaries/{summaryId} {
      allow read: if isAdmin() || (isParent() && resource.data.parentId == request.auth.uid) || (isStudent() && resource.data.childId == request.auth.uid);
      allow write: if isAdmin() || (isParent() && request.resource.data.parentId == request.auth.uid);
    }

    match /auditLog/{id} {
      allow read: if isAdmin();
      allow write: if request.auth != null;
    }
  }
}
